// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int sum(int arr[], int n) {
    int sum = 0;
    
    for(int i = 0; i < n; i++) {
        sum += arr[i];
    }
    
    return sum;
}

int productF(int arr[], int n) {
    int product = 1;
    
    for(int i = 0; i < n; i++) {
        product *= arr[i];
    }
    
    return product;
}

int main() {
    // Write C++ code here
    int arr[] = {4, 2, 7, 8, 1, 2, 5};
    int size = sizeof(arr) / sizeof(int);
    
    cout << sum(arr, size) << endl;
    cout << productF(arr, size);

    return 0;
}
