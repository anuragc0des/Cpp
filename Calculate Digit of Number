#include <iostream> // this is header files
using namespace std; // std is a function library from which we use cout and all other functions

// this is a function which separate digits from number and then adds it and also we are return an integer so we have to write int before function name
int sumOfDigit(int n) {
    int sum = 0; // declaring sum 0 
    
    while(n > 0) {
        int rem = n % 10; // get the remainder from the n like 3, 4, 1
        sum += rem; // then adding the remainder
        n = n / 10; // this is important as we done with one number (one iteration) it then updates that number by dividing it by 10 so from next loop we have 14 instead of 143
    }
    
    return sum; // here we are returing the sum;
}

int main() {
    // Write C++ code here
    cout << sumOfDigit(143); // here we are calling this function from the main 

    return 0;
}
