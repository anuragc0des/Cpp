// Online C++ compiler to run C++ program online
#include <iostream>
#include <climits>

using namespace std;

void swapMinMax(int arr[], int n) {
    int smallest = 0;
    int largest = 0;
    
    for(int i = 0; i < n; i++) {
        if(arr[i] < arr[smallest]) {
            smallest = i;
        }
        
        if(arr[i] > arr[largest]) {
            largest = i;
        }
    }
    
    swap(arr[smallest], arr[largest]);
    
    for(int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
};

int main() {
    // Write C++ code here
    int arr[] = {4, 2, 7, 8, 2, 5, 1};
    int size = sizeof(arr) / sizeof(int);
    
    swapMinMax(arr, size);

    return 0;
}
