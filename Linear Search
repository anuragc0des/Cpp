
#include <iostream>
using namespace std;

void linearSearch(int nums[], int size, int key) {
    bool found = false;
    
    for(int i = 0; i < size; i++) {
        if(nums[i] == key) {
            cout << key << " found at " << i << endl;
            found = true;
            break;
        }
    }
    
    if(!found) {
        cout << key << " not found in the array";
    }
}

int main() {
    int a[] = {8, 23, 3, 1, 56, 9};
    int b = sizeof(a) / sizeof(int);
    int c = 56;
    
    linearSearch(a, b, c);
    
    return 0;
}
