// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;


int binToDecimal(int n) {
    int dec = 0;
    int pow = 1;
    
    while(n > 0) {
        int rem = n % 10; //  we getting the last digit
        n /= 10; // we updating the n
        dec += (rem * pow); // we adding rem^2 to dec
        pow *= 2; // we updating pow by sq of 2
    }
    
    return dec;
}

int main() {
    int n = 1010;
    cout << binToDecimal(n);
    return 0;
}
