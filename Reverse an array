
#include <iostream>
using namespace std;

void reverseArr(int nums[], int size) {
    int start = 0, end = size - 1;
    
    // [start < end] when arr size is even & [start <= end] when arr size is odd
    while(start < end) {
        swap(nums[start], nums[end]);
        start++;
        end--;
    }
}

int main() {
    int a[] = {4, 2, 7, 8, 1, 2};
    int b = sizeof(a) / sizeof(int);
    
    reverseArr(a, b);
    
    for(int i = 0; i < b; i++) {
        cout << a[i] << " ";
    }
    
    return 0;
}
