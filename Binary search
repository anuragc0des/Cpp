
#include <iostream>
using namespace std;

int binarySearch(int arr[], int s, int key) {
    int start = 0, end = s - 1;
    
    while(start <= end) {
        int mid = (start + end) / 2;
        
        if(key < arr[mid]) {
            end = mid - 1;
        } else if (key > arr[mid]) {
            start = mid + 1;
        } else {
            return mid;
        }
    }
    
    return -1;
}


int main() {
    int arr[] = {-1, 0, 3, 4, 5, 9, 12};
    int size = sizeof(arr) / sizeof(int);
    int k = 12;
    
    cout << binarySearch(arr, size, k);
    return 0;
}
